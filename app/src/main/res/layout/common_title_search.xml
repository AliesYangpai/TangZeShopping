<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/titleBar"
        >


        <ImageView
            android:id="@+id/iv_common_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_back"
            android:layout_centerVertical="true"
            />









            <!--搜索框，点击跳转搜索页面-->
            <LinearLayout
                android:id="@+id/ll_fragment_to_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:padding="3dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/img_search_layout"
                android:layout_toRightOf="@id/iv_common_back"
                >

                <EditText
                    android:id="@+id/et_common_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="搜索商品"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>


        <ImageView
            android:id="@+id/iv_common_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_search"
            />







    </LinearLayout>


</LinearLayout>