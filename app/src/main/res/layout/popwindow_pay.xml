<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGray"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/pay_way_text"
            android:gravity="center"
            android:background="@color/white"
            />

        <!--微信支付-->
        <RelativeLayout
            android:id="@+id/rl_wx_pay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_marginTop="3dp"

            >




            <TextView
                android:id="@+id/tv_wx_pay"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="@string/wx_pay_text"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_wx_pay"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_wx_pay"
                />
        </RelativeLayout>

        <!--支付宝支付-->
        <RelativeLayout
            android:id="@+id/rl_ali_pay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_marginTop="0.5dp"

            >




            <TextView
                android:id="@+id/tv_ali_pay"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="@string/ali_pay_text"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_alipay"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_ali_pay"
                />
        </RelativeLayout>




    </LinearLayout>

</LinearLayout>