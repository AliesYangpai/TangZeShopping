<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>



    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_addr_picker_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_addr_picker_out</item>
    </style>



    <style name="Splash" parent="android:Theme.Light">
        <item name="android:windowBackground">@drawable/img_launch_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="transprot_style" parent="android:Theme.Light">
        <item name="android:windowBackground"> @android:color/transparent </item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>


    <style name="popwindow_anim_style">
        <!--指定显示动画-->
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>

        <!--指定消失动画-->
        <item name="android:windowExitAnimation">@anim/pophindden_anim</item>
    </style>


</resources>
